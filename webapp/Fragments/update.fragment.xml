<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns:core= "sap.ui.core" xmlns:f="sap.ui.layout.form" 
xmlns="sap.m">
<Dialog id="update" title="Update Details" >
          
               <VBox class="sapUiTinyMargin" >
                    <Label text="EmployeeID" />
                    <Input id="id_E" width="250px" editable="true"/>
                    <Label text="First Name" />
                    <Input id="FirstName_E" width="250px" editable="true"/>
                    <Label text="Email"/>
                    <Input id="Email_E" width="250px" editable="true"/>
                    <Label text="Phone"/>
                    <Input id="Phone_E" width="250px" editable="true"/>
                     <Label text="BloodGroup"/>
                    <Input id="BloodGroup_E" width="250px" editable="true"/>
                    <Label text="Department" />
                    <Input id="Department_E" width="250px" editable="true"/>
                    <Label text="Position" />
                    <Input id="Position_E" width="250px" editable="true"/>
                    <Label text="Joining Date" />
                    <Input id="JoiningDate_E" width="250px" editable="true" type="Date"/>
               </VBox>
          <footer>
               <Toolbar>
               <ToolbarSpacer/>
                <Button text="Update" press="onUpdateDialog"></Button>
                <Button text="Close" press="onCancleDialog"></Button>
              </Toolbar>
           </footer>
</Dialog>
</core:FragmentDefinition>