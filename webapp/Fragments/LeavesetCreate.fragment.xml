<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns="sap.m">
  <Dialog id="LeaveSetCreate">
    <VBox class="sapUiSmallMargin">
      <f:SimpleForm id="Set" editable="true" layout="ResponsiveGridLayout" singleContainerFullSize="false">
        <f:content>
          <Label text="ID" />
          <Input id="IDInput" value="{EmployeeID_ID}" />
          <Label text="EmployeeID" />
          <Input id="employeeIDInput" value="{EmployeeID_ID}" />
          <Label text="TotalLeaves" />
          <Input id="totalLeavesInput" value="{TotalLeaves}" />
          <Label text="LeavesUsed" />
          <Input id="leavesUsedInput" value="{LeavesUsed}" />
        </f:content>
      </f:SimpleForm>
    </VBox>
    <footer>
      <Toolbar>
        <ToolbarSpacer/>
        <Button text="Submit" press="onSubmit"/>
        <Button text="Close" press="OnClose"/>
      </Toolbar>
    </footer>
  </Dialog>
</core:FragmentDefinition>
