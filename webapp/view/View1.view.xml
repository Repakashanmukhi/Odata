<mvc:View xmlns:table="sap.ui.table" controllerName="odata.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <content>
    </content>
    <subHeader>
            <Bar>
                <contentRight>
                    <Button icon="sap-icon://add" press="onOpenDialog"></Button>
                </contentRight>
            </Bar>
        </subHeader>
    <Table id="employeeTable" growing="true" growingThreshold="5" items="{path: '/EmployeeInfo', sorter: {path: 'Department',  group: true}}">
    <columns>
        <Column>
            <Text text="EmpId"/>
        </Column>
        <Column>
            <Text text="FirstName"/>
        </Column>
        <Column>
            <Text text="Email"/>
        </Column>
        <Column>
            <Text text="Phone"/>
        </Column>
        <Column> 
            <Text text="Department"/>
        </Column>
        <Column>
            <Text text="Position"/>
        </Column>
        <Column>
            <Text text="JoiningDate"/>
        </Column>
        <Column>
            <Text text="Actions"/>
        </Column>
    </columns>
    <items>
    <GroupHeaderListItem title="{Department}" />
        <ColumnListItem type="Active" press="OnNavigate">
            <cells>
                <Text text="{ID}"/>
                <Text text="{FirstName}"/>
                <Text text="{Email}"/>
                <Text text="{Phone}"/>
                <Text text="{Department}"/>
                <Text text="{Position}"/>
                <Text text="{path: 'JoiningDate', formatter: '.formatter.formatJoiningDate'}" />
                <HBox>
                    <Button icon="sap-icon://delete" class="sapUiTinyMarginEnd" press="DeleteBtn" type="Reject"></Button>
                    <Button icon="sap-icon://user-edit" class="sapUiTinyMarginEnd" press="UpdateBtn"></Button>
                </HBox>
            </cells>
        </ColumnListItem>
    </items>
</Table>
    </Page>
</mvc:View> 